  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "args": ["run", "--no-debugger", "--no-reload"],
      "env": {
        "FLASK_APP": "backend/app.py",
        "FLASK_DEBUG": "1",
        "FLASK_RUN_PORT": "8000"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true
    }
  ]
}
